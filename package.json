{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "blitlink",
  "title": "BlitLink",
  "description": "Quickly store and retrieve links for future reference.",
  "icon": "BlitLink.png",
  "author": "RobertBolender",
  "owner": "github",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Links",
      "subtitle": "BlitLink",
      "keywords": [
        "bookmark",
        "link"
      ],
      "description": "Search through your locally-stored collection of saved URLs to copy or open them.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.37.1"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}